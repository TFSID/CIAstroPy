---
import Layout from '../layouts/LayoutEndpoint.astro';
---
<Layout title="Asset Management | Endpoint">
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div id="">
                                <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row mb-2">
                                            <div class="col-sm-4">
                                                <h2 class="" id="">Here For Endpoint | Server Management</h2>
                                            </div>
                                            <div class="col-sm-8">
                                                <div class="text-sm-end">
                                                    <button type="button" data-bs-toggle="modal" data-bs-target="#newOrderModal" class="btn btn-success btn-rounded waves-effect waves-light mb-2 me-2 addOrder-modal"><i class="mdi mdi-plus me-1"></i> Add Endpoint</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal fade" id="newOrderModal" tabindex="-1" aria-labelledby="newOrderModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="" id="">Add Endpoint</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form autocomplete="off" class="needs-validation createorder-form" id="createorder-form" novalidate>
                                                            <div class="row">
                                                                <div class="col-lg-12">
                                                                    <input type="hidden" class="form-control" id="orderid-input">
                                                                    <div class="mb-3">
                                                                        <label for="customername-field" class="form-label">EndpointHostname</label>
                                                                        <input type="text" id="customername-field" class="form-control" placeholder="Enter name Endpoint" required />
                                                                        <div class="invalid-feedback">Please enter a EndpointHostname</div>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="customername-field" class="form-label">Endpoint IP</label>
                                                                        <input type="text" id="customername-field" class="form-control" placeholder="Enter Endpoint IP" required />
                                                                        <div class="invalid-feedback">Please enter a Endpoint IP</div>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="customername-field" class="form-label">Regional | Endpoint Grup	</label>
                                                                        <input type="text" id="customername-field" class="form-control" placeholder="Enter Regional | Endpoint Grup	" required />
                                                                        <div class="invalid-feedback">Please enter a Regional | Endpoint Grup	</div>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="customername-field" class="form-label">OS Type		</label>
                                                                        <input type="text" id="customername-field" class="form-control" placeholder="Enter OS Type		" required />
                                                                        <div class="invalid-feedback">Please enter a OS Type		</div>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="customername-field" class="form-label">OS Name		</label>
                                                                        <input type="text" id="customername-field" class="form-control" placeholder="Enter OS Name		" required />
                                                                        <div class="invalid-feedback">Please enter a OS Name		</div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-lg-6">
                                                                    <div class="mb-3">
                                                                        <label for="paystatus-input" class="form-label">Protection manager</label>
                                                                        <select class="form-select" id="paystatus-input" required>
                                                                            <option value="Chargeback" selected>Endpoint Protection</option>
                                                                            <option value="Paid" >Server Protection</option>
                                                                        </select>
                                                                        <div class="invalid-feedback">Please select a payment status.</div>
                                                                    </div>
                                                                </div>
                                                                <!-- <div class="col-lg-6">
                                                                    <div class="mb-3">
                                                                        <label for="paymethod-input" class="form-label">Payment Method</label>
                                                                        <select class="form-select" id="paymethod-input">
                                                                            <option value="Mastercard">Mastercard</option>
                                                                            <option value="Visa">Visa</option>
                                                                            <option value="Paypal">Paypal</option>
                                                                            <option value="COD">COD</option>
                                                                        </select>
                                                                        <div class="invalid-feedback">Please select a payment method.</div>
                                                                    </div>
                                                                </div> -->
                                                                <div class="col-lg-12">
                                                                    <div class="text-end">
                                                                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                        <button type="submit" id="addNewOrder-btn" class="btn btn-success">Create</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Modal -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Endpoint User | Server has Added</h4>
                            <form class="app-search d-none d-lg-block">
                                <div class="position-relative">
                                    <input type="text" class="form-control" placeholder="Search...">
                                    <span class="bx bx-search-alt"></span>
                                </div>
                            </form>
                
                            <div class="table-responsive">
                                <table class="table table-striped-columns mb-0">
                
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Endpoint Hostname</th>
                                            <th>Endpoint IP</th>
                                            <th>Regional | Endpoint Grup</th>
                                            <th>OS Type</th>
                                            <th>OS Name</th>
                                            <th>Protection manager</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th scope="row">1</th>
                                            <td>Laptop Kazuha</td>
                                            <td>20.36.98.32</td>
                                            <td>Prancis</td>
                                            <td>Windows</td>
                                            <td>Windows 10</td>
                                            <td>Endpoint Protection</td>
                                            <td>
                                                <button type="button" class="btn btn-primary btn-sm btn-rounded waves-effect waves-light" data-bs-toggle="modal" data-bs-target=".transaction-detailModal">
                                                    View Details
                                                </button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row">2</th>
                                            <td>Laptop Raiden</td>
                                            <td>11.96.35.69</td>
                                            <td>Raiden</td>
                                            <td>Windows</td>
                                            <td>Windows 10</td>
                                            <td>Endpoint Protection</td>
                                            <td>
                                                <button type="button" class="btn btn-primary btn-sm btn-rounded waves-effect waves-light" data-bs-toggle="modal" data-bs-target=".transaction-detailModal">
                                                    View Details
                                                </button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row">3</th>
                                            <td>Zhongli</td>
                                            <td>78.96.65.65</td>
                                            <td>Childe</td>
                                            <td>Windows</td>
                                            <td>Windows 10</td>
                                            <td>Server Protection</td>
                                            <td>
                                                <button type="button" class="btn btn-primary btn-sm btn-rounded waves-effect waves-light" data-bs-toggle="modal" data-bs-target=".transaction-detailModal">
                                                    View Details
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>

<script>
    function dsf1(){
        $("#display-2").css({
                    "display": "none"
                });
                $("#display-1").css({
                    "display": "block"
                });
    }
    function dsf2(){
        $("#display-1").css({
                    "display": "none"
                });
        $("#display-2").css({
            "display": "block"
        });
    }
    document.getElementById('form-1').addEventListener('click', dsf1);
    document.getElementById('form-2').addEventListener('click', dsf2);
    
    </script>        


</Layout>