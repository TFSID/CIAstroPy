---

import Layout from '../layouts/Layout.astro';
---
<Layout title="Dashboard Instinct SecOps">
		<div class="main-content">
			<div class="page-content">
				<div class="container-fluid">
					<div class="row">
						<div class="col-12">
							<div class="page-title-box d-sm-flex align-items-center justify-content-between">
								<h1 class="mb-sm-0 font-size-40">Dashboard Instinct SecOps</h1>
							</div>
						</div>
					</div>
					<!-- end page title -->
					<div class="row">
						<div class="col-xl-4">
							<div class="card overflow-hidden">
								<div class="bg-primary-subtle">
									<div class="row">
										<div class="col-7">
											<div class="text-primary p-3">
												<h5 class="text-primary">Welcome Back Darryl !</h5>
												<p>Cyber Security</p>
											</div>
										</div>
										<div class="col-5 align-self-end">
											<img src="assets/images/profile-img.png" alt="" class="img-fluid">
										</div>
									</div>
								</div>
								<div class="card-body pt-0">
									<div class="row">
										<div class="col-sm-7">
											<div class="avatar-md profile-user-wid mb-1">
												<img src="assets/images/users/avatar-1.jpeg" alt="" class="img-thumbnail rounded-circle">
											</div>
											<h5 class="font-size-14 text-truncate">Darryl Julyansyah</h5>
										</div>
										<div class="col-sm-8">
											<div class="pt-4">
												<div class="row">
													<div class="col-6">
													</div>
													<div class="col-6">
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-xl-8">
							<div class="row">
								<div class="col-md-4">
									<div class="card mini-stats-wid">
										<div class="card-body">
											<div class="d-flex">
												<div class="flex-grow-1">
													<p class="text-muted fw-medium">Server</p>
													<h4 class="mb-0">3131</h4>
												</div>
												<div class="flex-shrink-0 align-self-center">
													<div class="mini-stat-icon avatar-sm rounded-circle bg-primary">
														<span class="avatar-title">
															<i class="bx bx-copy-alt font-size-24"></i>
														</span>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="col-md-4">
									<div class="card mini-stats-wid">
										<div class="card-body">
											<div class="d-flex">
												<div class="flex-grow-1">
													<p class="text-muted fw-medium">Endpoint</p>
													<h4 class="mb-0">2424</h4>
												</div>
												<div class="flex-shrink-0 align-self-center ">
													<div class="avatar-sm rounded-circle bg-primary mini-stat-icon">
														<span class="avatar-title rounded-circle bg-primary">
															<i class="bx bx-archive-in font-size-24"></i>
														</span>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="col-md-4">
									<div class="card mini-stats-wid">
										<div class="card-body">
											<div class="d-flex">
												<div class="flex-grow-1">
													<p class="text-muted fw-medium">website</p>
													<h4 class="mb-0">4123</h4>
												</div>
												<div class="flex-shrink-0 align-self-center ">
													<div class="avatar-sm rounded-circle bg-primary mini-stat-icon">
														<span class="avatar-title rounded-circle bg-primary">
															<i class="bx bx-archive-in font-size-24"></i>
														</span>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<!--Chart  -->
                <div class="page-content">
                    <div class="container-fluid">
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                    <h1>Top View</h1>
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">Risk Endpoint with Vulnerability</h4>
                                        <div id="doughnut-chart" data-colors='["--bs-primary","--bs-warning", "--bs-danger","--bs-info", "--bs-success"]' class="e-charts"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">Top Detection Endpoint</h4>
                                        <div id="pie-chart" data-colors='["--bs-primary","--bs-warning", "--bs-danger","--bs-info", "--bs-success"]' class="e-charts"></div>
                                    </div>
                                </div>
                            </div>
							<div class="col-xl-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">Top CVE </h4>
                                        <div id="bar_chart" data-colors='["--bs-success"]' class="apex-charts" dir="ltr"></div>
                                    </div>
								</div>
                        	</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
		</div>
	</div>
</Layout>


