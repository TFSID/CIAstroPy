---
import Layout from '../layouts/LayoutWebServer.astro';
---
<Layout title="Asset Management | Web Server">
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div id="">
                                <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row mb-2">
                                            <div class="col-sm-4">
                                                <h2 class="" id="">Here For Web Server 
                                                    <br>
                                                    Management</h2>
                                            </div>
                                            <div class="col-sm-8">
                                                <div class="text-sm-end">
                                                    <button type="button" data-bs-toggle="modal" data-bs-target="#newOrderModal" class="btn btn-success btn-rounded waves-effect waves-light mb-2 me-2 addOrder-modal"><i class="mdi mdi-plus me-1"></i> Add Endpoint</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal fade" id="newOrderModal" tabindex="-1" aria-labelledby="newOrderModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="" id="">Add Web Server</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form autocomplete="off" class="needs-validation createorder-form" id="createorder-form" novalidate>
                                                            <div class="row">
                                                                <div class="col-lg-12">
                                                                    <input type="hidden" class="form-control" id="orderid-input">
                                                                    <div class="mb-3">
                                                                        <label for="customername-field" class="form-label">IP local</label>
                                                                        <input type="text" id="customername-field" class="form-control" placeholder="Enter IP local<" required />
                                                                        <div class="invalid-feedback">Please enter a IP local</div>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="customername-field" class="form-label">IP public</label>
                                                                        <input type="text" id="customername-field" class="form-control" placeholder="Enter IP public" required />
                                                                        <div class="invalid-feedback">Please enter a IP public</div>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="customername-field" class="form-label">Domain </label>
                                                                        <input type="text" id="customername-field" class="form-control" placeholder="Enter Domain " required />
                                                                        <div class="invalid-feedback">Please enter a Domain </div>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="customername-field" class="form-label">SubDomain</label>
                                                                        <input type="text" id="customername-field" class="form-control" placeholder="Enter SubDomain" required />
                                                                        <div class="invalid-feedback">Please enter a SubDomain</div>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="customername-field" class="form-label">URL Web Server</label>
                                                                        <input type="text" id="customername-field" class="form-control" placeholder="Enter URL Web Server" required />
                                                                        <div class="invalid-feedback">Please enter a URL Web Server</div>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="customername-field" class="form-label">Language Program</label>
                                                                        <input type="text" id="customername-field" class="form-control" placeholder="Enter Language Program" required />
                                                                        <div class="invalid-feedback">Please enter a Language Program</div>
                                                                    </div>
                                                                </div>  
                                                                <!-- <div class="col-lg-6">
                                                                    <div class="mb-3">
                                                                        <label for="paymethod-input" class="form-label">Payment Method</label>
                                                                        <select class="form-select" id="paymethod-input">
                                                                            <option value="Mastercard">Mastercard</option>
                                                                            <option value="Visa">Visa</option>
                                                                            <option value="Paypal">Paypal</option>
                                                                            <option value="COD">COD</option>
                                                                        </select>
                                                                        <div class="invalid-feedback">Please select a payment method.</div>
                                                                    </div>
                                                                </div> -->
                                                                <div class="col-lg-12">
                                                                    <div class="text-end">
                                                                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                        <button type="submit" id="addNewOrder-btn" class="btn btn-success">Create</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Modal -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Web Server has Added</h4>
                            <form class="app-search d-none d-lg-block">
                                <div class="position-relative">
                                    <input type="text" class="form-control" placeholder="Search...">
                                    <span class="bx bx-search-alt"></span>
                                </div>
                            </form>
                
                            <div class="table-responsive">
                                <table class="table table-striped-columns mb-0">
                
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>IP local</th>
                                            <th>IP public</th>
                                            <th>Domain</th>
                                            <th>SubDomain</th>
                                            <th>URL Web Server</th>
                                            <th>Language Program</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th scope="row">1</th>
                                            <td>Laptop Kazuha</td>
                                            <td>20.36.98.32</td>
                                            <td>Prancis</td>
                                            <td>Windows</td>
                                            <td>Windows 10</td>
                                            <td>Endpoint Protection</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">2</th>
                                            <td>Laptop Raiden</td>
                                            <td>11.96.35.69</td>
                                            <td>Raiden</td>
                                            <td>Windows</td>
                                            <td>Windows 10</td>
                                            <td>Endpoint Protection</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">3</th>
                                            <td>Zhongli</td>
                                            <td>78.96.65.65</td>
                                            <td>Childe</td>
                                            <td>Windows</td>
                                            <td>Windows 10</td>
                                            <td>Server Protection</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>

<script>
    function dsf1(){
        $("#display-2").css({
                    "display": "none"
                });
                $("#display-1").css({
                    "display": "block"
                });
    }
    function dsf2(){
        $("#display-1").css({
                    "display": "none"
                });
        $("#display-2").css({
            "display": "block"
        });
    }
    document.getElementById('form-1').addEventListener('click', dsf1);
    document.getElementById('form-2').addEventListener('click', dsf2);
    
    </script>        


</Layout>